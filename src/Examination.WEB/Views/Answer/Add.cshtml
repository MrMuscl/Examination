@model Examination.Data.Models.Answer

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="IsValid" /> @Html.DisplayNameFor(model => model.IsValid)
                <input type="hidden" id="TestId" name="TestId" value="@Model.Question.TestId" />
                <input type="hidden" asp-for="QuestionId" class="form-control" value="@Model.Question.Id"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @Html.ActionLink("Back", "Index", "AdminTest", new { id = Model.Question.Test.Id, questionId = Model.Question.Id })
</div>