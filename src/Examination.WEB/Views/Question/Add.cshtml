@model Examination.Data.Models.Question

@{
    ViewData["Title"] = "CreateQuestion";
}

<h1>Create Question for @Model.Test.Name test</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Question" asp-action="Add" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <input type="hidden" asp-for="TestId" value="@Model.Test.Id" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="AdminTest" asp-action="Index" asp-route-id="@Model.Test.Id">Back to List</a>
</div>

