@model Examination.WEB.Models.TestResultsViewMode

@{
    ViewData["Title"] = "TestResult";
}

<h1>Test Result</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Start time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attestation.StartTime)
        </dd>
        <dt class="col-sm-2">
            End time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attestation.EndTime)
        </dd>
        <dt class="col-sm-2">
            User name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attestation.UserName)
        </dd>
        <dt class="col-sm-2">
            Test:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.Name)
        </dd>
        <dt class="col-sm-2">
            Total questions:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.Questions.Count)
        </dd>
        <dt class="col-sm-2">
            Correct Answers:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CorrectCount)
        </dd>
        <dt class="col-sm-2">
            Errors:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncorrectCount)
        </dd>
        <dt class="col-sm-2">
            Result:
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsPassed)
            {
                <div class="bg-success">Passed</div>
            }
            else
            {
                <div class="bg-danger">Failed</div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-controller="StudentTest">Back to List</a>
</div>
