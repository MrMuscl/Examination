@model Examination.Data.Models.Question

@{
    ViewData["Title"] = "Execute";
}

<h1>Execute</h1>

<div>
    <h4>Question</h4>
    <hr />
    <form >
        <dl class="row">
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Text)
            </dd>
        </dl>
        @for (int i = 0; i < Model.Answers.Count; i++)
        {
            <div><input type="radio" name="Answer" /> @Model.Answers.ToList()[i].Text</div>
        }

        <div>
            <hr>
            <button type="submit" class="btn-info" formaction="ExecutePrev">Prevu</button>
            <button type="submit" class="btn-info" formaction="ExecuteNext">Next</button>
        </div>
    </form>


</div>
