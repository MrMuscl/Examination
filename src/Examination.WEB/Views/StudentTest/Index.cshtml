@model IEnumerable<Examination.Data.Models.Test>

@{
    ViewData["Title"] = "Tests";
}

<h1>Tests (Student)</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name) (@item.Questions.Count questions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Difficulty)
                </td>
                <td>
                    @if (item.Questions.Count > 0)
                    {
                        <a asp-action="Execute" asp-route-id="@item.Id">Execute</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
